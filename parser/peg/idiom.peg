// Alias Grammar

AliasG <- _ "as" _ alias:Variable {
    if name, ok := cast.TryString(alias); ok {
        return name, nil
    }
    return nil, errors.New("Could not decode alias")
}

EqAliasG <- alias:Variable _ "=" {
    if name, ok := cast.TryString(alias); ok {
        return name, nil
    }
    return nil, errors.New("Could not decode alias")
}

