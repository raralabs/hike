CountAgg <- alias:EqAliasG? _ "count(" _ args:FilterMulti? _ ")"  {

    name, filter, err := parseAggArgs(alias, args)
    if err != nil {
        return nil, err
    }

    return Count{Alias: name, Filter: filter}, nil
}

